CONFIG_REPAIR_DELAY_CYBORG=3
CONFIG_REPAIR_STACK_CYBORG=100
CONFIG_REPAIR_STEP_VEHICLE=1
CONFIG_REPAIR_DELAY_VEHICLE=3
CONFIG_REPAIR_STACK_VEHICLE=100